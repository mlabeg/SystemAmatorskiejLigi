@model LigaAmatorska.Domain.Entities.Druzyna

@{
    ViewData["Title"] = "Edytuj Drużynę";
}

<div class="container">
    <h4>Edytuj Drużynę</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EdytujDruzyne">
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    <label class="control-label">Nazwa:</label>
                    <input asp-for="nazwa" class="form-control" />
                    <span asp-validation-for="nazwa" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}